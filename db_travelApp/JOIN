-- SQL JOIN tabel cities dengan flights

SELECT flights.id AS flight_id, 
    departure.airport_city AS departure_city, 
    departure.alias_city AS departure_alias, 
    arrival.airport_city AS arrival_city, 
    arrival.alias_city AS arrival_alias, 
    flights.date_departure, 
    flights.date_arrival, 
    flights.price, 
    flights.baggage, 
    flights.is_cabin FROM flights JOIN cities AS departure ON flights.city_departure departure.id JOIN cities AS arrival ON flights.city_arrival arrival.id;